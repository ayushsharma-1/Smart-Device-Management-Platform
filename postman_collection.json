              "body": "{\n  \"success\": true,\n  \"logs\": [\n    {\n      \"id\": \"l1692356400456\",\n      \"event\": \"units_consumed\",\n      \"value\": \"2.50\",\n      \"timestamp\": \"2025-08-17T08:00:00Z\",\n      \"device_id\": \"d1692356400123\",\n      \"created_at\": \"2025-08-17T08:00:00Z\"\n    },\n    {\n      \"id\": \"l1692356400789\",\n      \"event\": \"units_consumed\",\n      \"value\": \"1.20\",\n      \"timestamp\": \"2025-08-17T09:00:00Z\",\n      \"device_id\": \"d1692356400123\",\n      \"created_at\": \"2025-08-17T09:00:00Z\"\n    }\n  ]\n}"
            }
          ]
        },
        {
          "name": "Get Device Logs with Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/devices/{{device_id}}/logs?limit=10&event=units_consumed&start_date=2025-08-17T00:00:00Z&end_date=2025-08-18T00:00:00Z",
