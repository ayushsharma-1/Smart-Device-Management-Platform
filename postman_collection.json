              "mode": "raw",
              "raw": "{\n  \"event\": \"units_consumed\",\n  \"value\": 2.5\n}"
            },
            "url": {
              "raw": "{{base_url}}/devices/{{device_id}}/logs",
              "host": ["{{base_url}}"],
              "path": ["devices", "{{device_id}}", "logs"]
