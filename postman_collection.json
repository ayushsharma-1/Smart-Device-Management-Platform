              "path": ["devices", "{{device_id}}", "logs"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get device logs with optional filters"
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/devices/{{device_id}}/logs?limit=10",
                  "host": ["{{base_url}}"],
                  "path": ["devices", "{{device_id}}", "logs"],
                  "query": [
                    {
                      "key": "limit",
                      "value": "10"
